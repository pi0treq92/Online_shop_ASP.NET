@model twoja_manufaktura.Models.Order
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_PrawyLayout.cshtml";
}

<h1>
    Uzupełnij Zamówienie
</h1>

@using (Html.BeginForm("Checkout", "Koszyk"))
{
    <table id="checkout-address-table">
        <tr>
            <td>@Html.LabelFor(o => o.Name, "Imię:")</td>
            <td>@Html.TextBoxFor(o => o.Name)</td>
            <td>@Html.ValidationMessageFor(o => o.Name)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(o => o.LastName, "Nazwisko")</td>
            <td>@Html.TextBoxFor(o => o.LastName)</td>
            <td>@Html.ValidationMessageFor(o => o.LastName)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(o => o.Address, "Adres")</td>
            <td>@Html.TextBoxFor(o => o.Address)</td>
            <td>@Html.ValidationMessageFor(o => o.Address)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(o => o.City, "Miasto")</td>
            <td>@Html.TextBoxFor(o => o.City)</td>
            <td>@Html.ValidationMessageFor(o => o.City)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(o => o.Code, "Kod")</td>
            <td>@Html.TextBoxFor(o => o.Code)</td>
            <td>@Html.ValidationMessageFor(o => o.Code)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(o => o.PhoneNumber, "Numer telefonu")</td>
            <td>@Html.TextBoxFor(o => o.PhoneNumber)</td>
            <td>@Html.ValidationMessageFor(o => o.PhoneNumber)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(o => o.Email, "Adres e-mail")</td>
            <td>@Html.TextBoxFor(o => o.Email)</td>
            <td>@Html.ValidationMessageFor(o => o.Email)</td>
        </tr>
        <tr>
            <td><label for="comment">Uwagi</label></td>
            <td>
                <textarea cols="40" rows="3" name="comment">@Model.Comment</textarea>
            </td>
        </tr>
    </table>

    @Html.ValidationSummary()

    <hr style="margin-bottom: 50px;" />

    <div class="section-button-container">
        <a class="button-link" href="">Wróć</a>
        <input type="submit" class="button-link" style="" value="Potwierdź" />
    </div>
}